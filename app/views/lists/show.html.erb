<% if @list.photo.attached? %>
<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, width: 500 %>')"
<h1> <%= @list.name.capitalize %> </h1>
<% end %>


</div>

<% @bookmarks.each do |bookmark| %>
  <%= bookmark.movie.title %>
  <%=image_tag(bookmark.movie.poster_url)%>
  <%= bookmark.movie.overview%>
  <%= bookmark.movie.rating%>
  <%= bookmark.comment %>
<%= link_to "Delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<% end %>

<br>
<%= link_to "Back to lists", root_path %>
<br>
<%= link_to "Add new bookmark", new_list_bookmark_path(@list) %>
<br>
